<!DOCTYPE html>
<html>
<head>
  <title>RainSense</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => false %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => false %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="top-bar"> 
		<div class="sessions">
			<ul id="top-bar-nav">
				<% if logged_in? %>
					<li> 
						<%= link_to "#{current_user.name.split(" ")[0]}", edit_user_path(	current_user) %> 
					</li>
					<li> <%= link_to "Logout", logout_path %> </li>
				<% else %>
					<li> 
						<%= link_to 'Login',  login_path, {class: 'login-link'} %> 

		<div class="login-popup"> 
			<div class="login-triangle-up"> </div>
			<%= render "sessions/new" %>
		</div>
					</li>
				<% end %>
			</ul>
		</div>
	</div>
	<% if request.fullpath != "/"%>
		<div class="icon_home"> 
			<%= link_to "", root_path, {	class: "icon_home_link"} %> 
		</div>
	<% end %>
	<div class="page-wrap">
		<div id='alert'> 
			<div class="warning-text">
				<span class="warning"> </span>
				Warning: Water is unsafe to drink. Reasons:
			</div>
			
			<%= link_to "More info >>", "	/rain_barrel/water_quality", {class: "warning-link"} %>
		</div>
		<%= yield %>
	</div>
</body>
</html>
